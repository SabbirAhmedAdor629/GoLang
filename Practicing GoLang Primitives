// default initialized value for go is 0
// Bit Shifting operation for integers

package main

import "fmt"

func main() {
	a := 1 == 1
	fmt.Printf("%v\n", a)

	b := 10
	//var c float32 = 15.5
	//fmt.Printf("%v", b+int(c))

	var c int = 10
	var d int = 3

	fmt.Println(c & d)  // and operator
	fmt.Println(c | d)  // OR operator
	fmt.Println(c ^ d)  // Exclusive OR operator
	fmt.Println(c &^ d) // and not operator
	
	// Bit Shifting
	a := 8
	fmt.Println(a << 4)
	fmt.Println(a >> 3)
	
	
	//Unsigned Integer
	// we are not allowed to add two integers of different types, we have might need help from type conversion
	var n uint16 = 42
	var m int = 4
	fmt.Println(int(n) + m)
	
	//Complex numbers
	var n complex64 = 2i
	fmt.Printf("%v %T\n", n, n)
	
	fmt.Printf("%v %T %T\n", m+n, n, m) //Addition
	fmt.Printf("%v %T %T\n", m-n, n, m) //Subtraction
	fmt.Printf("%v %T %T\n", m/n, n, m) //Division
	fmt.Printf("%v %T %T\n", n*m, n, m) //Multiplication
	
	// Real and Imaginary Part
	fmt.Printf("%v %T\n", real(n), real(n))
	fmt.Printf("%v %T\n", real(m), real(m))
	
	
	// String
	s := "My name is Sabbir Ahmed"
	fmt.Printf("%v, %T", string(s[1]), s)
	
	
	// String concatination
	s := "Alhamdulillah "
	m := "Allah valo rakhsen"
	fmt.Printf("%v, %T, %T\n", s+m, s, m)
	
	
	// Coverting the string into bytes
	s := "Alhamdulillah "
	m := []byte(s)
	fmt.Printf("%v, %T\n", m, m)
	

}
































